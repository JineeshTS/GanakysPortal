# GanaPortal Environment Configuration
# Copy this file to .env and fill in the values

# ═══════════════════════════════════════════════════════════════════
# APPLICATION
# ═══════════════════════════════════════════════════════════════════
APP_NAME=GanaPortal
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# ═══════════════════════════════════════════════════════════════════
# DATABASE
# ═══════════════════════════════════════════════════════════════════
DATABASE_URL=postgresql+asyncpg://ganaportal_user:GanaPortal2026!@localhost:5432/ganaportal
DB_PASSWORD=GanaPortal2026!
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# ═══════════════════════════════════════════════════════════════════
# REDIS
# ═══════════════════════════════════════════════════════════════════
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_SESSION_DB=1
REDIS_CACHE_DB=2

# ═══════════════════════════════════════════════════════════════════
# SECURITY
# ═══════════════════════════════════════════════════════════════════
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# ═══════════════════════════════════════════════════════════════════
# AI PROVIDERS (Fallback Chain)
# ═══════════════════════════════════════════════════════════════════
# Primary: Claude (Anthropic)
CLAUDE_API_KEY=sk-ant-api03-xxxxxxxxxxxx
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Fallback 1: Gemini (Google)
GEMINI_API_KEY=AIzaSyxxxxxxxxxxxx
GEMINI_MODEL=gemini-1.5-pro

# Fallback 2: GPT-4 (OpenAI)
OPENAI_API_KEY=sk-xxxxxxxxxxxx
OPENAI_MODEL=gpt-4-turbo

# Fallback 3: Together AI
TOGETHER_API_KEY=xxxxxxxxxxxx
TOGETHER_MODEL=meta-llama/Llama-3-70b-chat-hf

# AI Confidence Thresholds
AI_AUTO_EXECUTE_THRESHOLD=0.95
AI_QUEUE_REVIEW_THRESHOLD=0.70

# ═══════════════════════════════════════════════════════════════════
# EMAIL (AWS SES)
# ═══════════════════════════════════════════════════════════════════
EMAIL_PROVIDER=ses
AWS_SES_REGION=ap-south-1
AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXX
AWS_SECRET_ACCESS_KEY=xxxxxxxxxxxxxxxxxxxx
EMAIL_FROM=noreply@ganakys.com

# Alternative: SendGrid
# EMAIL_PROVIDER=sendgrid
# SENDGRID_API_KEY=SG.xxxxxxxxxxxx

# ═══════════════════════════════════════════════════════════════════
# SMS (MSG91)
# ═══════════════════════════════════════════════════════════════════
MSG91_AUTH_KEY=xxxxxxxxxxxx
MSG91_SENDER_ID=GANAKY
MSG91_TEMPLATE_ID=xxxxxxxxxxxx

# ═══════════════════════════════════════════════════════════════════
# FILE STORAGE
# ═══════════════════════════════════════════════════════════════════
FILE_STORAGE_PATH=/var/data/ganaportal/files
MAX_UPLOAD_SIZE_MB=50

# ═══════════════════════════════════════════════════════════════════
# CELERY (Background Tasks)
# ═══════════════════════════════════════════════════════════════════
CELERY_BROKER_URL=redis://localhost:6379/3
CELERY_RESULT_BACKEND=redis://localhost:6379/4

# ═══════════════════════════════════════════════════════════════════
# INDIA COMPLIANCE
# ═══════════════════════════════════════════════════════════════════
COMPANY_STATE=Karnataka
FINANCIAL_YEAR_START_MONTH=4
PF_CONTRIBUTION_RATE=0.12
ESI_EMPLOYEE_RATE=0.0075
ESI_EMPLOYER_RATE=0.0325
ESI_WAGE_LIMIT=21000
EPS_WAGE_LIMIT=15000
EPS_RATE=0.0833
EPS_MAX_CONTRIBUTION=1250
DEFAULT_GST_RATE=0.18
CGST_RATE=0.09
SGST_RATE=0.09

# ═══════════════════════════════════════════════════════════════════
# LOGGING
# ═══════════════════════════════════════════════════════════════════
LOG_LEVEL=INFO
LOG_FORMAT=json

# ═══════════════════════════════════════════════════════════════════
# CORS
# ═══════════════════════════════════════════════════════════════════
ALLOWED_ORIGINS=http://localhost:3000,https://portal.ganakys.com
