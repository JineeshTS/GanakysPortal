# GanaPortal Environment Configuration

# Application
APP_NAME=GanaPortal
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ganaportal
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ganaportal

# Redis
REDIS_URL=redis://localhost:6379/0

# Security (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# CORS
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# JWT
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# File Storage
UPLOAD_DIR=/var/data/gana-portal
MAX_UPLOAD_SIZE_MB=50

# Email (optional, for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@ganakys.com
SMTP_FROM_NAME=GanaPortal

# Claude AI (optional, for AI features)
ANTHROPIC_API_KEY=
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Timezone
DEFAULT_TIMEZONE=Asia/Kolkata
DEFAULT_CURRENCY=INR
