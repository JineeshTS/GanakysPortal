  "calculation_formulas": {
    "pf": {
      "employee_contribution": "Math.round((basic + da) * 0.12)",
      "employer_epf": "Math.round((basic + da) * 0.0367)",
      "employer_eps": "Math.min(Math.round((basic + da) * 0.0833), 1250)",
      "total_employer": "employer_epf + employer_eps"
    },
    "esi": {
      "employee_contribution": "Math.round(gross * 0.0075)",
      "employer_contribution": "Math.round(gross * 0.0325)",
      "total": "Math.round(gross * 0.04)"
    },
    "pt_karnataka": {
      "monthly": "gross > 15000 ? (month === 'February' ? 300 : 200) : 0"
    },
    "tds_new_regime": {
      "steps": [
        "1. Calculate gross salary",
        "2. Deduct standard deduction (50000)",
        "3. Apply slab rates",
        "4. Add surcharge if applicable",
        "5. Add 4% cess",
        "6. Apply rebate u/s 87A if eligible",
        "7. Divide by 12 for monthly TDS"
      ]
    }
  }
