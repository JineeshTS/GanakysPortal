    "headers": ["X-RateLimit-Limit", "X-RateLimit-Remaining", "X-RateLimit-Reset"]
  },
  "middleware_chain": [
    "CORSMiddleware",
    "RequestIDMiddleware",
    "LoggingMiddleware",
    "RateLimitMiddleware",
    "AuthenticationMiddleware",
    "AuthorizationMiddleware",
    "ValidationMiddleware"
  ],
  "endpoint_patterns": {
