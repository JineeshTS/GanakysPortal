# DEP-003: GanaPortal Environment Template
# Copy to .env.local, .env.staging, or .env.production and fill in values

# =============================================================================
# Application
# =============================================================================
APP_NAME=GanaPortal
APP_ENV=development           # development, staging, production
DEBUG=true
LOG_LEVEL=DEBUG              # DEBUG, INFO, WARNING, ERROR
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# Database
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ganaportal_db
DB_USER=ganaportal
DB_PASSWORD=your-secure-password
DATABASE_URL=postgresql+asyncpg://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# =============================================================================
# Redis
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/0

# =============================================================================
# Security (GENERATE STRONG RANDOM VALUES!)
# =============================================================================
# Generate: openssl rand -hex 32
JWT_SECRET_KEY=your-64-character-secret-key-generate-with-openssl-rand-hex-32
ENCRYPTION_KEY=your-32-byte-encryption-key-hex

# =============================================================================
# AI Services (Get API keys from respective providers)
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-...
GOOGLE_AI_API_KEY=AIza...
OPENAI_API_KEY=sk-...
TOGETHER_API_KEY=...

# =============================================================================
# Email (SMTP)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@ganakys.com

# =============================================================================
# Indian Compliance (Get from respective government portals)
# =============================================================================
PF_ESTABLISHMENT_CODE=KABLR0012345
PF_EXTENSION=000
ESI_CODE=12345678901234567
ESI_BRANCH=12
GST_IN=29AABCU9603R1ZM
TAN_NUMBER=BLRA12345B

# =============================================================================
# Monitoring
# =============================================================================
SENTRY_DSN=https://xxx@sentry.io/xxx
